<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:NexusBridgeGui.ViewModels"
             x:Class="NexusBridgeGui.Views.MainMenuView"
             x:DataType="vm:MainMenuViewModel">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="12" Width="300">
        <TextBlock Text="Main Menu" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <Button Content="Install Collection"
                Command="{Binding InstallCollectionCommand}"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Center"
                Padding="16,12"
                FontSize="16"/>

        <Button Content="About"
                Command="{Binding OpenAboutCommand}"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Center"
                Padding="16,12"
                FontSize="16"/>

        <Button Content="Exit"
                Command="{Binding ExitCommand}"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Center"
                Padding="16,12"
                FontSize="16"
                Margin="0,20,0,0"/>
    </StackPanel>
</UserControl>
